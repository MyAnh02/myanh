@model List<HoNguyenThiMyAnh.Context.Category>
@{
    ViewBag.Title = "Category";
}

<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">

                 <div class="card card-category">
                     <div class="none object">
                         <div class="img-wrap" style="background:#d4cccc">
                             <img src="~/Content/images/Category/@item.Avatar">
                             style="width:128px;height:128px;">
                             
                         </div>
                         <div class="card-body">
                             <h2 class="card-title"><a href="">@item.Name</a></h2>
                         </div>
                     </div>
                     </div>
                 </div> <!-- col.// -->
            }


        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->